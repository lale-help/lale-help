.tab-nav

  a.tasks data-tab='tasks'
    = Task.model_name.human(count: 2)
    span.badge = project.tasks.not_completed.count
  a.supplies data-tab='supplies'
    = Supply.model_name.human(count: 2)
    span.badge = project.supplies.not_completed.count
  a.comments data-tab='comments'
    = Comment.model_name.human(count: 2)
  a.info data-tab='stats'
    = t('.stats')
  a.documents data-tab='documents'
    = t('circle.admins.nav.files')
    span.badge = project.files.count
